.button
  position relative
  overflow hidden

  &::before
    content ''
    position absolute
    top 50%
    left 50%
    width 0
    height 0
    background-color rgba(255, 255, 255, 0.2)
    border-radius 50%
    transform translate(-50%, -50%)
    transition all 0.5s ease-out

  &:active::before
    width 300%
    height 300%

  &:focus
    outline none
    box-shadow 0 0 0 3px rgba(66, 153, 225, 0.5)

  &:disabled
    cursor not-allowed
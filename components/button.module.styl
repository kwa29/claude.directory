.button
  border-radius: 4px
  font-weight: bold
  transition: all 0.3s ease
  cursor: pointer
  border: none
  outline: none

.primary
  background-color: #3498db
  color: white

  &:hover
    background-color: darken(#3498db, 10%)

.secondary
  background-color: #ecf0f1
  color: #34495e

  &:hover
    background-color: darken(#ecf0f1, 10%)

.small
  padding: 8px 16px
  font-size: 14px

.medium
  padding: 12px 24px
  font-size: 16px

.large
  padding: 16px 32px
  font-size: 18px
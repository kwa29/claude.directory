.button
  padding 10px 20px
  border-radius 4px
  font-weight bold
  cursor pointer
  transition background-color 0.3s
  border none
  outline none

.primary
  background-color #007bff
  color white

  &:hover
    background-color #0056b3

.secondary
  background-color #6c757d
  color white

  &:hover
    background-color #545b62
.button
  padding 10px 20px
  border-radius 4px
  font-weight bold
  cursor pointer
  transition background-color 0.3s ease

  &:disabled
    opacity 0.5
    cursor not-allowed

.primary
  background-color #007bff
  color #ffffff

  &:hover:not(:disabled)
    background-color #0056b3

.secondary
  background-color #6c757d
  color #ffffff

  &:hover:not(:disabled)
    background-color #545b62
.button
  font-family: sans-serif
  font-weight: 600
  border-radius: 4px
  cursor: pointer
  transition: all 0.2s ease-in-out
  display: inline-flex
  align-items: center
  justify-content: center

  &:focus
    outline: none
    box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5)

  &.disabled
    opacity: 0.5
    cursor: not-allowed

  &.primary
    background-color: #4299e1
    color: white
    border: none

    &:hover:not(.disabled)
      background-color: #3182ce

  &.secondary
    background-color: #edf2f7
    color: #2d3748
    border: 1px solid #e2e8f0

    &:hover:not(.disabled)
      background-color: #e2e8f0

  &.outline
    background-color: transparent
    color: #4299e1
    border: 1px solid #4299e1

    &:hover:not(.disabled)
      background-color: #ebf8ff

  &.small
    padding: 0.5rem 1rem
    font-size: 0.875rem

  &.medium
    padding: 0.75rem 1.5rem
    font-size: 1rem

  &.large
    padding: 1rem 2rem
    font-size: 1.125rem
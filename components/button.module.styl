.button
  position: relative
  overflow: hidden
  transition: all 0.3s ease

  &:before
    content: ''
    position: absolute
    top: 50%
    left: 50%
    width: 0
    height: 0
    background: rgba(255, 255, 255, 0.2)
    border-radius: 50%
    transform: translate(-50%, -50%)
    transition: width 0.3s ease, height 0.3s ease

  &:hover:before
    width: 300%
    height: 300%

  &:active
    transform: scale(0.98)